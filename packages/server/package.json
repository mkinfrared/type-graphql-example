{
  "name": "@bookstore/server",
  "private": true,
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "main": "build/server.js",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production yarn build:ts && yarn copy-static-assets",
    "serve": "node build/server.js",
    "start": "ts-node-dev --clear -C ttypescript src/server.ts",
    "test": "cross-env NODE_ENV=test jest --forceExit --coverage --verbose --runInBand",
    "ci": "start-server-and-test test:server http://localhost:4001 test",
    "build:ts": "ttsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "coverage": "open-cli ./coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@bookstore/common": "^0.0.0",
    "apollo-server-express": "^2.9.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "class-validator": "^0.10.0",
    "compression": "^1.7.4",
    "connect-redis": "^3.4.2",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "graphql": "^14.5.0",
    "graphql-yup-middleware": "^0.0.1",
    "ioredis": "^4.14.0",
    "lusca": "^1.6.1",
    "nodemailer": "^6.3.0",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.5",
    "typeorm": "^0.2.18",
    "uuid": "^3.3.3",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/connect-redis": "^0.0.11",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.14",
    "@types/graphql": "^14.5.0",
    "@types/ioredis": "^4.0.15",
    "@types/jest": "^24.0.18",
    "@types/lusca": "^1.6.1",
    "@types/node": "^12.7.2",
    "@types/nodemailer": "^6.2.1",
    "@types/shelljs": "^0.8.5",
    "@types/sinon-express-mock": "^1.3.7",
    "@types/uuid": "^3.4.5",
    "@types/yup": "^0.26.23",
    "cross-env": "^5.2.0",
    "jest": "24.8.0",
    "open-cli": "^5.0.0",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.41",
    "ttypescript": "^1.5.7",
    "typescript-transform-paths": "^1.1.10"
  }
}
